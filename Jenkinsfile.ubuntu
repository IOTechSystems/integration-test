pipeline {
    agent any
    triggers { cron('0 6 * * *') }

    stages{
        stage("integration-test"){
            steps{
                parallel(
                  ubuntu: {
                    node("ubuntu1604-vm1"){

                        script {

                            checkout scm

                            def rootDir = pwd()
                            def integrationTestJob = load "${rootDir}/integrationTestJob.groovy"

                            integrationTestJob.runNode()
                        }
                    }
                  }
                )

            }

        }
    }



}

